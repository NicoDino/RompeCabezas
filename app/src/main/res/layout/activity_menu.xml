<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="org.catos.rompecabezas.MenuActivity"
    android:background="@mipmap/img1">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Rompe Cabezas"
        android:id="@+id/titulo"
        android:textSize="40dp"
        android:textColor="#e5e88539"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:typeface="serif"
        android:textAlignment="center" />

    <Button
        android:layout_width="170dp"
        android:layout_height="45dp"
        android:text="Salir"
        android:id="@+id/salir"
        android:textSize="30dp"
        android:textColor="#000000"
        android:background="#908c5023"
        android:layout_marginBottom="40dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="170dp"
        android:layout_height="45dp"
        android:text="Ranking"
        android:id="@+id/verRank"
        android:textSize="30dp"
        android:textColor="#000000"
        android:background="#908c5023"
        android:layout_marginBottom="40dp"
        android:layout_above="@+id/salir"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="170dp"
        android:layout_height="45dp"
        android:text="Empezar"
        android:id="@+id/empezar"
        android:textSize="30dp"
        android:textColor="#000000"
        android:background="#908c5023"
        android:layout_marginBottom="40dp"
        android:layout_above="@+id/verRank"
        android:layout_centerHorizontal="true" />
</RelativeLayout>