<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="org.catos.rompecabezas.MenuActivity"
    android:background="#f2133036">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Rompe Cabezas"
        android:id="@+id/titulo"
        android:textSize="60dp"
        android:fontFamily="cursive"
        android:textColor="#e5e88539"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp" />

    <Button
        android:layout_width="220dp"
        android:layout_height="45dp"
        android:text="Empezar"
        android:id="@+id/empezar"
        android:textSize="30dp"
        android:textColor="#232347"
        android:background="#d6a09d9d"
        android:layout_above="@+id/verRank"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="81dp" />

    <Button
        android:layout_width="220dp"
        android:layout_height="45dp"
        android:text="Ver Ranking"
        android:id="@+id/verRank"
        android:textSize="30dp"
        android:textColor="#232347"
        android:background="#d6a09d9d"
        android:layout_above="@+id/salir"
        android:layout_alignLeft="@+id/empezar"
        android:layout_alignStart="@+id/empezar"
        android:layout_marginBottom="77dp" />

    <Button
        android:layout_width="220dp"
        android:layout_height="45dp"
        android:text="Salir"
        android:id="@+id/salir"
        android:textSize="30dp"
        android:textColor="#232347"
        android:background="#d6a09d9d"
        android:layout_marginBottom="68dp"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/verRank"
        android:layout_alignStart="@+id/verRank" />
</RelativeLayout>
